{
  "name": "idiomas-app/consola-cursos",
  "description": "Aplicación de consola para búsqueda de recursos de idiomas",
  "type": "project",
  "license": "MIT",
  "require": {
    "php": ">=8.0",
    "ext-pdo": "*",
    "ext-mbstring": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^12.0",
    "phpdocumentor/shim": "^3.7"
  },
  "autoload": {
    "psr-4": {
      "IdiomasApp\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "IdiomasApp\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit"
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "phpdocumentor/shim": true,
      "phpdocumentor/reflection-docblock": true,
      "phpdocumentor/type-resolver": true
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
